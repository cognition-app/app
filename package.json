{
  "$schema": "https://raw.githubusercontent.com/cognition-app/schema/master/dist/core/plugin",
  "name": "@cognition-app/app",
  "version": "1.0.0",
  "description": "The actual cognition application, assembling all the components in a unifying application",
  "main": "dist/index.js",
  "types": "dist/**/*.d.ts",
  "scripts": {
    "build:css": "node-sass --recursive --source-map true --output-style compressed --output dist src",
    "build:ts": "tsc",
    "build": "npm run build:ts && npm run build:css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cognition-app/app.git"
  },
  "author": "Daniel J. B. Clarke <u8sand@gmail.com>",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/cognition-app/app/issues"
  },
  "homepage": "https://github.com/cognition-app/app#readme",
  "devDependencies": {
    "@types/enzyme": "^3.1.14",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.6.0",
    "mocha": "^5.2.0",
    "node-sass": "^4.9.4",
    "tslint": "^5.11.0",
    "tslint-react": "^3.6.0",
    "typescript": "^3.1.3"
  },
  "dependencies": {
    "@cognition-app/schema": "file:../schema",
    "@material-ui/core": "^3.2.0",
    "@material-ui/icons": "^3.0.1",
    "@types/pouchdb": "^6.3.2",
    "@types/pouchdb-browser": "^6.1.2",
    "@types/react": "^16.4.18",
    "@types/react-dom": "^16.0.9",
    "browserify": "^16.2.3",
    "dynamic-import": "^0.1.0",
    "immutable": "^3.8.2",
    "material-design-icons": "^3.0.1",
    "materialize-css": "^1.0.0-rc.2",
    "pouchdb-browser": "^7.0.0",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-pouchdb": "^0.3.0"
  },
  "cognition": {
    "$schema": "https://raw.githubusercontent.com/cognition-app/app/master/dist/schema/app/plugin",
    "supportedPlugins": {
      "https://raw.githubusercontent.com/cognition-app/schema/master/dist/core/plugin/provider": "provider",
      "https://raw.githubusercontent.com/cognition-app/schema/master/dist/core/plugin/registry": "registry",
      "https://raw.githubusercontent.com/cognition-app/schema/master/dist/core/plugin/view": "view"
    },
    "dbName": "cognition",
    "configId": "cognition",
    "config": {
      "$schema": "https://raw.githubusercontent.com/cognition-app/app/master/dist/schema/app/config",
      "view": "@cognition-app/view-dummy",
      "plugins": [
        "@cognition-app/view-dummy"
      ]
    }
  }
}
